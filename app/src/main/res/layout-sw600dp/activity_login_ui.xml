<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/image_view_size"
        android:layout_height="@dimen/image_view_size"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@drawable/ic_app_icon"
        android:id="@+id/ic_app_icon"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_20"
        android:background="@color/green_47c"
        android:id="@+id/agree_and_continue_button_panel"
        android:contentDescription="@null">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/padding_20"
            android:background="@drawable/login_button"
            android:elevation="@dimen/elevation_5"
            android:id="@+id/agree_and_continue_button"
            android:contentDescription="@string/agree_and_continue_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/text_view_summary"
                android:textColor="@color/white"
                android:text="@string/agree_and_continue_button"
                android:id="@+id/agree_and_continue_button_title"
                android:contentDescription="@null"/>

            <ProgressBar
                android:layout_width="@dimen/login_progress_bar"
                android:layout_height="@dimen/login_progress_bar"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                android:id="@+id/agree_and_continue_progress_bar"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>